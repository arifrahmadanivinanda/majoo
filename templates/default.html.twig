{% block stylesheets%}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <script src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/CopySchedule/copyschedule.js') }}"></script>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; width: 90%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/"><b>Majoo Teknologi Indonesia</b></a>
    </nav>
    <div class="example-wrapper">
        <h5><b>Produk</b></h5>
        <div class="row">
            {% for item in items %}
                <div clas="col-xs-6 col-sm-3 col-lg-3" style="margin:20px">
                    <div class="card" style="width: 17rem;">
                        <img class="card-img-top" src="{{ asset('img/uploads/') }}{{item.image}}" alt="Card image cap">
                        <div class="card-body">
                            <center><h5 class="card-title">{{item.name}}</h5></center>
                            <center><h5 class="card-title">Rp. <b>{{ item.price|number_format(2, ',', '.') }}</b></h5></center>
                            <p style="text-align:justify;font-size:8pt">{{item.description}}</p>
                            <center><a href="#" class="btn btn-info">Beli</a></center>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand">
    <center><p style="font-size:10pt">2021 Â© PT Majoo Teknologi Indonesia</p></center></a>
    <form class="form-inline">
        {% if loggedIn %}
            <center><a href="/admin"><p style="font-size:10pt">Admin</p></a></center>
        {% else %}
            <center><a href="/login"><p style="font-size:10pt">Login</p></a></center>
        {% endif %}
    </form>
    </nav>
{% endblock %}
